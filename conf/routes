# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# HOME PAGE
GET        /                        controllers.HomeController.index()

# TASK LIST PAGE
GET        /tasklist                controllers.HomeController.taskList()

# ADD TASK
# POST /addtask                     controllers.HomeController.addTask()
# VIEW TASK
# GET /task/:id                       controllers.HomeController.showTask(id: Long)
# EDIT
# POST /task/:id/edittask           controllers.HomeController.editTask(id: Long)
# DELETE TASK
# POST /task/:id                    controllers.HomeController.deleteTask(id: Long)
# COMPLETE TASK
# POST /task/:id                    controllers.HomeController.completeTask(id: Long)
# Responds with 404 Not Found
# GET /order                        controllers.Default.notFound


# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
